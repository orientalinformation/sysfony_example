{% block body %}
	<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{'Add/Modify Money'|trans}}</h4>
    </div>
    
    <form action="/createModiMoney" id="form-modal" role="form" method="post">    
    	<div class="modal-body">
    		<div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                        	<label>{{'Value type'|trans}} : {{'Price'|trans}}</label>
                        </div>
                        <div class="form-group">
                        	<input type="radio" onclick="$('.fm_money_input').val('')" name="create_money" value="1"> {{'New'|trans}}</input>
							<input type="radio" onclick="$('#fm_money_moneysym').val('{{money['symbol']}}');$('#fm_money_text').val('{{money.unita}}');" checked="" name="create_money" value="0"> {{'Modify'|trans}}</input><p>	
							<input type="hidden" name="id_money" value="{{money['idunit']}}" >	
                        </div>
                        <div class="form-group">
                        	<table class="table table-bordered">
							  <tr>
							    <th>{{'Text'|trans}}</th>
							    <th>{{'Symbol'|trans}}</th>
							  </tr>
							  <tr>
							    <td><input class="form-control input-radius fm_money_input" type="text" id="fm_money_moneysym" name="_moneytext" value="{{money.unita}}"></td>
							    <td><input class="form-control input-radius fm_money_input" type="text" id="fm_money_text" name="_moneysym" value="{{money['symbol']}}"></td>
							  </tr>
							</table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
		<button type="button" class="btn btn-danger btn-flat pull-left buttons" data-dismiss="modal">{{'Cancel'|trans}}</button>
		<input type="submit" class="btn btn-success btn-flat buttons" value="{{'Confirm'|trans}}"></input>
	</div>
</form>
</div>
{% endblock %}
